<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="net.imthinker.android.httpstacks.MainActivity">

    <Button
        android:id="@+id/normal_volley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="normalVolley"
        android:text="Normal"/>

    <Button
        android:id="@+id/stack_volley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="stackVolley"
        android:text="DefaultHttpClient"/>

    <Button
        android:id="@+id/okhttp_volley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="okhttpVolley"
        android:text="OkHttp"/>
</LinearLayout>
